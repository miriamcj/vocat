<div class="page-section">
	<div class="body">
	<form class="formgrid">
    <fieldset>
      <div class="formgrid whole">
        <label>Rubric Name</label>
        <input type="text" value="{{name}}" data-behavior="rubric-name">
      </div>
	    <div class="formgrid whole">
        <label>Description</label>
        <input type="text" value="{{description}}" data-behavior="rubric-desc">
        <small class="input-message">Enter a brief description of your rubric.</small>
      </div>
	    <div class="formgrid third">
		    <label>Lowest Possible Score</label>
		    <input min="0" max="100" type="number" step="1" data-behavior="rubric-low">
		    <small class="input-message">Usually, this will be 0.</small>
	    </div>
	    <div class="formgrid third">
		    <label>Highest Possible Score</label>
		    <input min="0" max="100" step="1" type="number" data-behavior="rubric-high">
		    <small class="input-message">VOCAT's max score is 100</small>
	    </div>
	    {{#if current_user_is_admin}}
	    <div class="formgrid third">
		    <label>Is this a system-wide rubric?</label>
		    <select data-behavior="chosen" data-field="rubric-public">
			    <option {{#unless public}}selected="selected"{{/unless}} value="false">No</option>
			    <option {{#if public}}selected="selected"{{/if}} value="true">Yes</option>
		    </select>
	    </div>
			{{/if}}
	    <div class="formgrid whole" style="display: none;">
		    <label>Rubric Score Ranges</label>
		    <div style="margin-top: 4.8rem; margin-bottom: 2rem;" data-region="range-picker"></div>
		    <small class="input-message">As you add ranges to your rubric, dividers will appear on the range above. Drag
		    these dividers to the correct locations to set the score ranges for your rubric.</small>
	    </div>
    </fieldset>
  </form>
	</div>
