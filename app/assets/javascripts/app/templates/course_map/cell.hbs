<dl>
  <dt>Media</dt>
  <dd>
    {{#if has_video}}
    <b class="matrix--check"></b>
    {{else}}
    <b></b>
    {{/if}}
  </dd>
</dl>
<dl>
  <dt>Score</dt>
  <dd>
    {{#if project_evaluatable}}
      {{#if current_user_has_evaluated }}
      {{to_i current_user_percentage}}<small>%</small>
      {{else}}
        {{#if is_admin}}
        <b class="matrix--scored">{{to_i instructor_score_percentage}}%</b>
        {{else}}
         &mdash; &mdash;
        {{/if}}
      {{/if}}
    {{else}}
    &mdash; &mdash;
    {{/if}}
  </dd>
</dl>
<dl>
  <dt>Published</dt>
  <dd>
    {{#if project_evaluatable}}
      {{#if current_user_has_evaluated}}
        {{#if current_user_evaluation_published}}
          <b class="matrix--checkbox checked"></b>
        {{else}}
          <b class="matrix--checkbox "></b>
        {{/if}}
      {{else}}
        <b class="matrix--checkbox "></b>
      {{/if}}
    {{/if}}
  </dd>
</dl>