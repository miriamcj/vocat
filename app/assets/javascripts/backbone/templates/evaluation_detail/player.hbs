{{#if submission.has_transcoded_attachment}}
  <video class="attachment--media" id="submission-video" data-behavior="video-player" controls>
    <source src="{{submission.url}}">
  </video>
{{else}}
  <div class="attachment--media">
    <div class="attachment-placeholder">
    {{#if submission.uploaded_attachment}}
      <span class="attachment-placeholder--message">Transcoding in progress</span>
    {{else}}
	    {{#if submission.current_user_can_attach}}
	    <a data-behavior="show-upload" class="attachment-placeholder--button" href="#">Upload video now</a>
	    {{else}}
	    <span class="attachment-placeholder--message">No video has been uploaded</span>
	    {{/if}}
    {{/if}}
    </div>
  </div>
{{/if}}
