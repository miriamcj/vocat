{{#if validationError}}
<div class="alert alert-info">
  {{validationError}}
</div>
{{/if}}
<table class="rubric-table table table-bordered table-striped">

	<thead>
		<th></th>
		{{#each rubric.fields}}
		<th>
		  <p>{{this.name}} <a data-field="{{this.name}}" class="js-delete-field" href="#">[x]</a></p>
		  <span style="font-weight: normal">{{this.description}}</span>
		</th>
		{{/each}}
		<th>
  		<form class="js-new-field">
        <input type="text" id="js-new-field-value" placeholder="New Field Name">
    	</form>
		</th>
	</thead>
	<tbody>
		{{#each rubric.ranges}}
		<tr>
			<th>
			  <p>{{this.name}} <a data-range="{{this.name}}" class="js-delete-range" href="#">[x]</a></p>
			  <input data-range="{{this.name}}" data-type="low" class="input-mini js-range-number" type="number" value="{{this.low}}">
			  to
			  <input data-range="{{this.name}}" data-type="high" class="input-mini js-range-number" type="number" value="{{this.high}}">
			</th>
			{{#each ../rubric.fields}}
			<td></td>
			{{/each}}
			<td></td>
		</tr>
		{{/each}}
		<tr>
			<th>
    		<form class="js-new-range">
    			<input type="text" id="js-new-range-value" placeholder="New Range">
        </form>
			</th>
			{{#each rubric.fields}}
			<td></td>
			{{/each}}
			<td></td>
		</tr>
	</tbody>

</table>