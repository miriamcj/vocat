<div class="well">
  <div class="row" xmlns="http://www.w3.org/1999/html">
    <div class="submission-attachment span3">
      <img src="{{submission.thumb}}" style="width: 270px;" />
      <div style="margin-bottom: 10px; margin-top: 10px">
        <small class="with-gray">No Instructor Comments</small><br>
        <small class="with-gray">
          <a href="{{url_for 'course_creator_project' submission.course_id submission.creator_id submission.project_id}}">
            3 Peer Comments
          </a>
        </small>
      </div>
      <a class="btn btn-mini" href="{{url_for 'course_creator_project' submission.course_id submission.creator_id submission.project_id}}">
        + See all feedback
      </a>
    </div>
    <div class="submission-content span8">
      <div class="row">
        <div class="span7">
          <h5 style="margin: 0;">
            <a href="{{url_for 'courses_evaluations' submission.course_id}}">
              {{submission.course_name_long}}
            </a>
          </h5>
          <h3 style="margin-top: 0;">
						<a href="{{url_for 'course_creator_project' submission.course_id submission.creator_id submission.project_id}}">
              {{submission.project_name}}
            </a>
          </h3>
        </div>
        <div class="text-right span1">
          <small class="with-gray with-block">Evaluated</small>
        </div>
      </div>
      <ul class="unstyled evaluation-list with-gray-dark">
        <li class="row">
          <div class="span7 evaluation-wrapper">
            <div class="evaluation-box evaluated" style="width: 60%;">Evaluated</div>
          </div>
          <div class="span1">
            <div class="evaluation-box text-center">60%</div>
          </div>
        </li>
        <li class="row">
          <div class="span7 evaluation-wrapper">
            <div class="evaluation-box evaluated" style="width: 40%;">Evaluated</div>
          </div>
          <div class="span1">
            <div class="evaluation-box text-center">40%</div>
          </div>
        </li>
      </ul>
      <a class="btn btn-mini" href="{{url_for 'course_creator_project' submission.course_id submission.creator_id submission.project_id}}">+ Expand details</a>
    </div>
  </div>
 </div>