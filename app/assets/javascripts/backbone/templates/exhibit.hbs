<div class="well">
  <div class="row" xmlns="http://www.w3.org/1999/html">
    <div class="exhibit-attachment span3">
      {{#if exhibit.submission}}
          <img src="{{exhibit.submission.thumb}}" style="width: 270px;" />
      {{else}}
          <div class="placeholder" >
            No submission has been saved for this user/project
          </div>
      {{/if}}
      <div style="margin-bottom: 10px; margin-top: 10px">
        <small class="with-gray">No Instructor Comments</small><br>
        <small class="with-gray"><a href="#">3 Peer Comments</a></small>
      </div>
      <a class="btn btn-mini" href="#">+ See all feedback</a>
    </div>
    <div class="exhibit-content span8">
      <div class="row">
        <div class="span7">
          <h5 style="margin: 0;"><a href="#">{{exhibit.course.department}} {{exhibit.course.number}}: <span style="font-weight: normal">{{exhibit.course.name}}</span></a></h5>
          <h3 style="margin-top: 0;><a href="#">{{exhibit.project.name}}</a></h3>
        </div>
        <div class="text-right span1">
          {{#if exhibit.submission}}
          <small class="with-gray with-block">Evaluated</small>
          {{else}}
          <small class="with-gray with-block">Unevaluated</small>
          {{/if}}
        </div>
      </div>
      <ul class="unstyled evaluation-list with-gray-dark">
        <li class="row">
          <div class="span7 evaluation-wrapper">
            <div class="evaluation-box evaluated" style="width: 60%;">Evaluated</div>
          </div>
          <div class="span1">
            <div class="evaluation-box text-center">60%</div>
          </div>
        </li>
        <li class="row">
          <div class="span7 evaluation-wrapper">
            <div class="evaluation-box unevaluated">Unevaluated</div>
          </div>
          <div class="span1">
            <div class="evaluation-box text-center">--</div>
          </div>
        </li>
      </ul>
      <a class="btn btn-mini" href="#">+ Expand details</a>
    </div>
  </div>
 </div>