<div class="well">
  <div class="row" xmlns="http://www.w3.org/1999/html">
    <div class="exhibit-attachment span3">
      {{#if exhibit.submission}}
          <img src="{{exhibit.submission.thumb}}" style="width: 270px;" />
      {{else}}
          <div class="placeholder" >
            No submission has been saved for this user/project
          </div>
      {{/if}}
      {{#if exhibit.submission}}
      <div style="margin-bottom: 10px; margin-top: 10px">
        <small class="with-gray">No Instructor Comments</small><br>
        <small class="with-gray"><a href="{{url_for 'organization_course_submission' exhibit.course.organization_id exhibit.course.id exhibit.submission.id}}">3 Peer Comments</a></small>
      </div>
      <a class="btn btn-mini" href="{{url_for 'organization_course_submission' exhibit.course.organization_id exhibit.course.id exhibit.submission.id}}">+ See all feedback</a>
      {{/if}}
    </div>
    <div class="exhibit-content span8">
      <div class="row">
        <div class="span7">
          <h5 style="margin: 0;">
            <a href="{{url_for 'organization_course_projects' exhibit.course.organization_id exhibit.course.id}}">
              {{exhibit.course.department}} {{exhibit.course.number}}: <span style="font-weight: normal">{{exhibit.course.name}}</span>
            </a>
          </h5>
          <h3 style="margin-top: 0;"><a href="{{url_for 'organization_course_project' exhibit.course.organization_id exhibit.course.id exhibit.project.id}}">{{exhibit.project.name}}</a></h3>
        </div>
        <div class="text-right span1">
          {{#if exhibit.submission}}
          <small class="with-gray with-block">Evaluated</small>
          {{else}}
          <small class="with-gray with-block">Unevaluated</small>
          {{/if}}
        </div>
      </div>
      <ul class="unstyled evaluation-list with-gray-dark">
        <li class="row">
          <div class="span7 evaluation-wrapper">
            {{#if exhibit.submission}}
            <div class="evaluation-box evaluated" style="width: 60%;">Evaluated</div>
            {{else}}
            <div class="evaluation-box unevaluated">Unevaluated</div>
            {{/if}}
          </div>
          <div class="span1">
            {{#if exhibit.submission}}
            <div class="evaluation-box text-center">60%</div>
            {{else}}
            <div class="evaluation-box text-center">--</div>
            {{/if}}
          </div>
        </li>
        <li class="row">
          <div class="span7 evaluation-wrapper">
            {{#if exhibit.submission}}
            <div class="evaluation-box evaluated" style="width: 40%;">Evaluated</div>
            {{else}}
            <div class="evaluation-box unevaluated">Unevaluated</div>
            {{/if}}
          </div>
          <div class="span1">
            {{#if exhibit.submission}}
            <div class="evaluation-box text-center">40%</div>
            {{else}}
            <div class="evaluation-box text-center">--</div>
            {{/if}}
          </div>
        </li>
      </ul>
      {{#if exhibit.submission}}
      <a class="btn btn-mini" href="{{url_for 'organization_course_submission' exhibit.course.organization_id exhibit.course.id exhibit.submission.id}}">+ Expand details</a>
      {{/if}}
    </div>
  </div>
 </div>