<h1>Listing submissions</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Summary</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @submissions.each do |submission| %>
  <tr>
    <td><%= submission.name %></td>
    <td><%= submission.summary %></td>
    <td><%= link_to 'Show', organization_course_assignment_submission_path(submission) %></td>
    <td><%= link_to 'Edit', edit_organization_course_assignment_path(@organization, @course, @assignment, submission) %></td>
    <td><%= link_to 'Destroy', organization_course_assignment_submission_path(submission), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

