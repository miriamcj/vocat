<h1>Listing submissions</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Summary</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @submissions.each do |submission| %>
  <tr>
    <td><%= submission.name %></td>
    <td><%= submission.summary %></td>
    <td><%= link_to 'Show', organization_course_assignment_submission_path(@organization, @course, @assignment, submission) %></td>
    <% if can? :update, submission %>
      <td><%= link_to 'Edit', edit_organization_course_assignment_submission_path(@organization, @course, @assignment, submission) %></td>
    <% end %>
    <% if can? :destroy, submission %>
      <td><%= link_to 'Destroy', organization_course_assignment_submission_path(@organization, @course, @assignment, submission), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />
<% if can? :create, @assignment.submissions.build %>
  <%= link_to 'New Assignment submission', new_organization_course_assignment_submission_path(@organization, @course, @assignment) %>
<% end %>
