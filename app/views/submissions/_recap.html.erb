<div class="project-recap well">
  <div class="video">
    <% if submission %>
      <%= link_to organization_course_project_submission_path(@organization, submission.project.course, submission.project, submission) do %>
        <%= image_tag submission.attachments.first.url(:thumb) %>
      <% end %>
    <% end %>
  </div>
  <div class="title">
      <span>
        <%= link_to submission.project.course.format("%d%n %c"), organization_course_path(@organization, submission.project.course) %>
      </span>
    /
      <span>
        <%= link_to submission.project.name, organization_course_project_path(@organization, submission.project.course, submission.project) %>
      </span>
    <% if current_user.role? :evaluator %>
    /
      <span>
        <%= submission.creator.name %>
      </span>
    <% end %>
  </div>
</div>