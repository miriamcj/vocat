<p id="notice"><%= notice %></p>


<p>
  <b>Name:</b>
  <%= @rubric.name %>
</p>

<p>
  <b>Description:</b>
  <%= @rubric.description %>
</p>

<table class="rubric-table table table-bordered table-striped">
  <thead>
    <th></th>
    <% @rubric.fields.each do |field_key, field_name| %>
    <th><%= field_name %></th>
    <% end %>
  </thead>
  <tbody>
    <% @rubric.ranges.each do |range_key, range_name| %>
    <tr>
      <th>
        <p>
          <%= range_name %>
        </p>
        <p style="font-weight: normal">
          Low: <%= @rubric.range_low(range_key) %>
        </p>
        <p style="font-weight: normal">
          High: <%= @rubric.range_high(range_key) %>
        </p>

      </th>
      <% @rubric.fields.each do |field_key, field_name| %>
        <td><%= @rubric.range_description(range_key, field_key) %></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>

<p>
  <%= link_to 'List Rubrics', course_rubrics_path(@course), :class => 'btn' %>
</p>