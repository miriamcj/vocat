<% content_for :header_text do %>
  Courses
<% end %>

<% content_for :header_links do %>
  <% unless local_assigns.fetch :hide_all, nil %>
    <%= link_to 'All Courses', admin_courses_path(), :class => 'primary-button close-button' %>
  <% end %>
  <% unless local_assigns.fetch :hide_new, nil %>
    <%= link_to 'New Course', new_admin_course_path, :class => 'primary-button plus-button' %>
  <% end %>
<% end %>

<% content_for :subheader do %>
  <% if @course %>
  <nav class="drop-nav drop-nav-gray" data-behavior="dropdown">
    <h2 class="header-secondary">
      <a class="drop-nav--toggle" data-behavior="toggle" href="#" >
        <%= "#{truncate(@course.name, length: 50, separator: ' ')} - #{@course.semester_name} #{@course.year}" %>
      </a>
    </h2>
    <div class="drop-nav--dropdown" data-behavior="dropdown-options">
      <ul>
        <li><%= link_to 'View as Instructor', course_user_evaluations_path(course) %></li>
        <li><%= link_to 'Course Overview', admin_course_path(course) %></li>
        <li><%= link_to 'Edit Course Properties', edit_admin_course_path(course) %></li>
        <li><%= link_to 'Export Data', export_admin_course_path(course) %></li>
        <li><%= link_to 'Manage Assistants', assistants_admin_course_path(course) %></li>
        <li><%= link_to 'Manage Evaluators', evaluators_admin_course_path(course) %></li>
        <li><%= link_to 'Manage Creators', creators_admin_course_path(course) %></li>
        <li><%= link_to 'Delete Course', admin_course_path(course), :method => :delete, :data => { :modalconfirm => 'Deleting this course will also delete all associated submissions, projects, and evaluations. This action is not reversible. Are you sure you would like to proceed?'} %></li>
      </ul>
    </div>
  </nav>
  <% end %>
<% end %>

