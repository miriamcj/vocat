<% content_for :content_header do %>
  Courses
<% end %>

<% content_for :content_header_links do %>
  <%= link_to 'Back to Course', admin_course_path(@course), :class => 'gray-ex-button' %>
<% end %>

<% content_for :content_intro do %>
<% end %>

<% content_for :content_frames	 do %>

  <%= render 'header', :subheader => 'Properties' %>

  <%= form_errors @course %>

  <%= form_for [:admin, @course] do |f| %>
    <%= render 'form', :f => f %>
    <div class="input-group">
      <%= f.submit 'Update Course', :class => 'teal-plus-button' %>
      <%= link_to 'Back', admin_course_path(@course), :class => 'gray-ex-button' %>
    </div>
  <% end %>
<% end %>

