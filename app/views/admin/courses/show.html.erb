<% content_for :content_header do %>
  Courses
<% end %>

<% content_for :content_header_links do %>
  <%= render 'header_links' %>
<% end %>

<% content_for :content_frames	 do %>

  <%= render 'header', :subheader => 'Course  Overview' %>

  <div>
    <div class="input-group">
      <span class="text-label">Department, Number, and Section</span>
      <span><%= @course.format "%d%n, Section %s" %></span>
    </div>
    <div class="input-group">
      <span class="text-label">Course Message</span>
      <span>
        <% if @course.message.blank? %>
          No message has been set for this course.
        <% else %>
          <%= simple_format @course.message %>
        <% end %>
      </span>
    </div>
    <div class="input-group">
      <span class="text-label">Description</span>
      <span>
        <% if @course.description.blank? %>
          No description has been added for this course.
        <% else %>
          <%= simple_format @course.description %>
        <% end %>
      </span>
    </div>
  </div>

  <div>
    <%= render 'shared/course_synopsis', :course => @course %>
  </div>

<% end %>

