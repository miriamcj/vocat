<% if @current_organization && @current_organization.ldap_enabled %>
	<%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
		<%= link_to "Forgot your LDAP/Active Directory password?", @current_organization.ldap_recover_pw_url, style: "margin-left: 10px" %>
	<% end -%>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && (!@current_organization || !@current_organization.ldap_enabled) %>
	<%= link_to "Forgot your password?", new_password_path(resource_name), style: "margin-left: 12px" %>
<% end -%>

<%- if controller_name != 'sessions' %>
	<%= link_to "Sign in", new_session_path(resource_name), style: "margin-left: 12px" %>
<% end -%>

<% if false %>
	<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
		<%= link_to "Sign up", new_registration_path(resource_name), style: "margin-left: 12px" %>
	<% end -%>
<% end %>


<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
	<%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), style: "margin-left: 12px" %>
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
	<%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), style: "margin-left: 12px" %>
<% end -%>

<%- if devise_mapping.omniauthable? %>
	<%- resource_class.omniauth_providers.each do |provider| %>
		<%= link_to "Sign in with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider), style: "margin-left: 12px" %>
	<% end -%>
<% end -%>
