<div class="authentication-tile alt">
  <h2 class="heading-caps-large">Sign up</h2>
  <hr>

  <%= render 'layouts/messages' %>
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="input-group">
      <%= f.label :email, :class => 'text-label' %>
      <%= f.email_field :email, :class => "text-input", :autofocus => true %>
    </div>

    <div class="input-group">
      <%= f.label :password, :class => 'text-label' %>
      <%= f.password_field :password, :class => "text-input" %>
    </div>

    <div class="input-group">
      <%= f.label :password_confirmation, :class => 'text-label' %>
      <%= f.password_field :password_confirmation, :class => "text-input" %>
    </div>

    <div class="input-group">
      <%= f.label 'Organization', :class => 'text-label' %>
      <%= collection_select(:organization, :id, Organization.all, :id, :name)  %>
    </div>

    <div class="input-group">
      <%= f.submit "Sign up", :class => "teal-arrow-button"%>
    </div>
  <% end %>

</div>

<footer class="authentication-footer">
  <%= render "devise/shared/links" %>
</footer>
