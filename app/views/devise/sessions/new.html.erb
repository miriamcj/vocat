<div class="span4 offset4">
  <h2 class="text-center">Sign in</h2>  
</div>
<div class="well span4 offset4">
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <div><%= f.email_field :email, :autofocus => true, :class => "span4", :placeholder => "Email" %></div>

    <div><%= f.password_field :password, :class => "span4", :placeholder => "Password" %></div>

    <%=  collection_select(:organization, :id, Organization.all, :id, :name, :placeholder => "Organization") %>

    <!-- <% if devise_mapping.rememberable? -%>
      <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
    <% end -%> -->

    <div><%= f.submit "Sign in", :class => "btn btn-primary" %></div>
  <% end %>
</div>

<div class="span4 offset4">
  <%= render "devise/shared/links" %>
</div>
