<div class="authentication-tile">
  <%= image_tag("placeholders/logo-baruch.png", :class => "authentication-tile--image", :alt => "Baruch College") %>
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
      <%= f.text_field :email, :class => "authentication-tile--input", :placeholder => "Email or Username", :autofocus => "autofocus" %>

      <%= f.password_field :password, :class => "authentication-tile--input", :placeholder => "Password" %>

      <!-- <%=  collection_select(:organization, :id, Organization.all, :id, :name, :placeholder => "Organization") %> -->

      <% if devise_mapping.rememberable? -%>
        <label class="authentication-tile--label" for="user_remember_me">
          <%= f.check_box :remember_me, :class => "authentication-tile--checkbox" %> 
          <b></b>
          <span class="authentication-tile--checkbox-text">Remember me</span>
        </label>
      <% end -%>

      <%= f.submit "Sign in", :class => "authentication-tile--button" %>
    <% end %>
</div>
<footer class="authentication-footer">
  <% unless Rails.application.config.vocat.ldap.enabled %>
    <%= render "devise/shared/links" %>
  <% else %>
    <%= render "devise/shared/ldap_links" %>
<% end %>
</footer>
