<% if submission.has_video? %>
	<div class="thumb-container">
		<%= link_to image_tag(submission.thumb), submission_detail_path(submission) %>
	</div>
<% else %>
	<div class="thumb-container-placeholder">
		<a href="<%= submission_detail_path(submission) %>">
			<% if current_user.can?(:attach, submission) %>
				<span>Visit Submission Page to Upload Attachment</span>
			<% else %>
				<span>No Attachment</span>
			<% end %>
		</a>
	</div>
<% end %>