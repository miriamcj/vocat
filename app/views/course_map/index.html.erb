<table class="table table-bordered course-map-table" >
  <thead>
    <tr>
      <td></td>
      <% @current_course.projects.each do |project| %>
      <th>
        <%=  link_to project.name, course_map_project_detail_path(:organization_id => @organization.id, :course_id => @current_course.id, :project_id => project.id) %>
      </th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @current_course.creators.each do |creator| %>
      <tr>
        <th>
          <%=  link_to creator.name, course_map_creator_detail_path(:organization_id => @organization.id, :course_id => @current_course.id, :creator_id => creator) %>
        </th>
        <% @current_course.projects.each do |project| %>
          <% exhibit = find_exhibit(@exhibits, creator, project) %>
          <td>
            <% if exhibit.submission %>
              <%=  link_to "#{exhibit.submission.id}", course_map_submission_detail_path(:organization_id => @organization.id, :course_id => @current_course.id, :creator_id => creator, :project_id => project), :class => "exhibit-link" %>
              <h5 class="exhibit-score">60%</h5>
              <b class="badge badge-info">&#8203;</b>
            <% else %>
              <div class="exhibit-link-unsubmitted"></div>
              <h5 class="exhibit-score">--</h5>
              <b class="badge">&#8203;</b>
          <% end %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

