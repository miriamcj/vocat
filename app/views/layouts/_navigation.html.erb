<%= link_to "Home", root_path, :class => 'brand' %>
<ul class="nav">
  <% if @courses %>
    <li>
      <div class="navbar-form">
        <% if @course %>
          <%= collection_select :course, :id, @courses, :id, :descriptive_name, {:include_blank => "All courses"}, :id => "course_select", :selected => @course.id, :data => {:url => organization_courses_path(@organization)} %>
        <% else %>
          <%= collection_select :course, :id, @courses, :id, :descriptive_name, {:include_blank => "All courses"}, :id => "course_select", :data => {:url => organization_courses_path(@organization)} %>
        <% end %>
      </div>
    </li>
  <% end %>
</ul>
<ul class="nav pull-right">
  <li>
    <% if user_signed_in? %>
		  <%= link_to(current_user.email, edit_user_registration_path) %>
    <% else %>
		  <%= link_to('Sign up', new_user_registration_path)  %>
    <% end %>
  </li>
  <li>
    <% if user_signed_in? %>
      <%= link_to('Log out', destroy_user_session_path, :method=>'delete') %>
    <% else %>
      <%= link_to('Log in', new_user_session_path)  %>
    <% end %>
  </li>
</ul>