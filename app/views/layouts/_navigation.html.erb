<nav class="course-selector">
  <select class="course-selector--select select" id="course_select" name="current_course[id]">
    <option value="/">All Courses</option>
    <% if current_user && current_user.has_courses %>
      <% current_user.courses.each do |course| %>
        <option <%= if @course == course then 'selected="selected"' end %> value="<%= url_for portfolio_course_path(course) %>"><%= course %></option>
      <% end %>
    <% end %>
  </select>
</nav>

<nav class="user-selector">
  <% if user_signed_in? %>
    <%= link_to("#{current_user.name} [#{current_user.email}]", edit_user_registration_path) %>
  <% else %>
    <%= link_to('Sign up', new_user_registration_path)  %>
  <% end %>
  <% if user_signed_in? %>
    <%= link_to('Log out', destroy_user_session_path, :method=>'delete') %>
  <% else %>
    <%= link_to('Log in', new_user_session_path)  %>
  <% end %>
</nav>

<%= image_tag("placeholders/charles-xavier.jpg", :class => "primary-nav--avatar", :alt => "Larry Sellers") %>

<a class="shortcut-nav--toggle" href="#">Toggle Shortcuts Drawer</a>
