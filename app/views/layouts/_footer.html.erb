<footer class="page-footer">
  <div class="page-footer-inner">
    <div class="page-footer--logo">
      <%= image_pack_tag("media/styles/images/png/logo-gray.png", :alt => "VOCAT") %>
	  	<div class="separator"></div>
      <% if @current_organization %>
        <span><%= @current_organization.name %></span>
      <% end %>
    </div>
    <div class="page-footer-colophon">
      <p class="page-footer-msg">
        <span>VOCAT is brought to you by <a href="http://baruch.cuny.edu" target="_blank">Baruch College</a>. Learn more at <a href="http://vocat.io" target="_blank">vocat.io</a>.</span>
        <% if Rails.configuration.vocat_build_number %>
          <span class="page-footer-version">Build <%= Rails.configuration.vocat_build_number %></span>
        <% end %>
      </p>
        <div class="baruch-logo">
          <a href="http://www.baruch.cuny.edu"></a>
        </div>
    </div>
  </div>
</footer>
