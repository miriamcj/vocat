<div class="row">
  <div class="span8">
    <h4><%= exhibit.project_name %></h4>
  </div>
  <div class="text-right pull-right">
    <small class="with-gray with-block">Unevaluated <b class="badge">&#8203;</b></small>
    <!--<small class="with-gray with-block">Evaluated <b class="badge badge-info">&#8203;</b></small>-->
  </div>
</div>
<div class="exhibit-attachment">
    <% if (exhibit.submission?) %>
      <div class="placeholder-red">
        Submission: <%=  link_to exhibit.submission.name, creator_course_map_path %>
      </div>
    <% else %>
      <div class="placeholder">
        No submission
      </div>
    <% end %>
</div>
<div class="exhibit-content">
  <h4 class="with-trim">Scores</h4>
  <nav class="with-space">
    <a class="btn btn-mini" href="">Overview</a>
    <a class="btn btn-mini" href="">Category 1</a>
    <a class="btn btn-mini" href="">Category 2</a>
    <a class="btn btn-mini" href="">Category 3</a>
    <a class="btn btn-mini pull-right" href="">View rubric</a>
  </nav>
  <ul class="unstyled evaluation-list with-gray-dark">
    <li class="row">
      <div class="span8 evaluation-wrapper">
        <div class="evaluation-box evaluated" style="width: 60%;">Evaluated</div>
      </div>
      <div class="span1">
        <div class="evaluation-box text-center">60%</div>
      </div>
    </li>
    <li class="row">
      <div class="span8 evaluation-wrapper">
        <div class="evaluation-box unevaluated">Unevaluated</div>
      </div>
      <div class="span1">
        <div class="evaluation-box text-center">--</div>
      </div>
    </li>
  </ul>
  <h4 class="with-trim">Feedback <a class="btn btn-mini pull-right" href="#" style="font-weight: normal;">+ Add feedback now</a></h4>
  <nav class="with-space">
    <a class="btn btn-mini" href="">Show all</a>
    <a class="btn btn-mini" href="">Instructor feedback</a>
    <a class="btn btn-mini" href="">Peer feedback</a>
  </nav>
  <div style="background-color: #fff; padding: 10px;">
    <div class="media">
      <div class="pull-left media-object" style="width: 30px; height: 30px; background-color: #999;"></div>
      <div class="media-body">
        <p class="media-heading"><strong>Commenter Name</strong> <br><small>Timestamp</small></p>
        <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed at felis leo.</p>
      </div>
    </div>
    <a class="btn btn-mini" href="#">Reply</a>
  </div>
</div>
