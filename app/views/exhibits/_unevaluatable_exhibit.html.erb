<div class="row">
  <div class="exhibit-attachment span3">
    <% if (exhibit.submission?) %>
        <div class="placeholder-red">
          Link to exhibit detail
        </div>
    <% else %>
        <div class="placeholder">
          No submission has been saved for this user/project
        </div>
    <% end %>
    <div style="margin-bottom: 20px;">
      <small class="with-gray">No Instructior Comments</small><br>
      <small class="with-gray"><a href="#">3 Peer Comments</a></small>
    </div>
    <a class="btn btn-mini" href="#">+ See all feedback</a>
  </div>
  <div class="exhibit-content span9">
    <div class="row">
      <div class="span7">
        <h5><%= exhibit.course_name %></h5>
        <h3><%= exhibit.project_name %></h3>
      </div>
      <div class="text-right span2">
        <small class="with-gray with-block">Unevaluated <b class="badge">&#8203;</b></small>
        <!--<small class="with-gray with-block">Evaluated <b class="badge badge-info">&#8203;</b></small>-->
      </div>
    </div>
    <ul class="unstyled evaluation-list">
      <li class="row">
        <div class="span8">
          <div class="evaluation-box with-gray">Evaluation Category 1</div>
        </div>
        <div class="span1">
          <div class="evaluation-box with-gray text-center">--</div>
        </div>
      </li>
      <li class="row">
        <div class="span8">
          <div class="evaluation-box with-gray">Evaluation Category 1</div>
        </div>
        <div class="span1">
          <div class="evaluation-box with-gray text-center">--</div>
        </div>
      </li>
    </ul>
    <a class="btn btn-mini" href="#">+ Expand details</a>
  </div>
</div>