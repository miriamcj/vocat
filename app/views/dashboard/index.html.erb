<% content_for :content do %>
  <div class="page-section">
    <div class="header-wrapper">
      <div class="buttons">
        <%= link_to 'Request New Course', new_course_request_path, :class => 'primary-button new-button' %>
      </div>
      <div class="header">
        <h4>Greetings, <%= current_user.first_name %></h4>
      </div>
    </div>
    <div class="body">
      <% if current_user.role == 'assistant' %>
        <%= render 'dashboard/messages/_assistant_message' %>
      <% elsif current_user.role == 'evaluator' %>
        <%= render 'dashboard/messages/evaluator_message' %>
      <% else %>
        <%= render 'dashboard/messages/creator_message' %>
      <% end %>
    </div>
  </div>


  <% current_user.courses.each do |course| %>
    <% role = course.role(current_user) %>
    <% if role == :assistant %>
      <%= render 'dashboard/shared/assistant_course', :course => course %>
    <% elsif role == :evaluator %>
      <%= render 'dashboard/shared/evaluator_course', :course => course %>
    <% elsif role == :creator %>
      <%= render 'dashboard/shared/creator_course', :course => course, :hide_header => false %>
    <% end %>

  <% end %>
<% end %>
