<% content_for :content do %>

    <div class="page-section">
      <div class="header-wrapper">
        <% if evaluator_or_admin? %>
            <div class="buttons">
              <%= link_to 'Request New Course', new_course_request_path, :class => 'primary-button new-button' %>
            </div>
        <% end %>
        <div class="header">
          <i class="icon courses"></i><h4>All Your Courses</h4>
          <p class="subtitle">Your current and previous courses and activity at a glance.</p>
        </div>
      </div>
      <div class="body secondary">
        <% if @courses.count > 0 %>
            <% @courses.each do |semester, courses| %>
                <h3 class="semester-header"><%= semester %></h3>
                <% courses.each do |course| %>
                    <%= render 'shared/course_synopsis', :course => course %>
                <% end %>
            <% end %>
        <% else %>
            It looks like you don't belong to any courses
            yet. <%= link_to 'Click here to request your first Vocat course', new_course_request_path %>.
        <% end %>
      </div>
    </div>

<% end %>
