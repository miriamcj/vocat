<% content_for :content do %>

	<div class="page-section">
		<div class="header-wrapper">
			<div class="buttons">
				<%= link_to 'Request New Course', new_course_request_path, :class => 'primary-button new-button' %>
			</div>
			<div class="header header-courses">
				<h4>Your Courses</h4>
        <p class="subtitle">Your courses and activity at a glance.</p>
			</div>
		</div>
		<div class="body secondary">
			<% if current_user.courses.count > 0 %>
				<% current_user.courses.each do |course| %>
					<%= render 'shared/course_synopsis', :course => course %>
				<% end %>
			<% else %>
				It looks like you don't belong to any courses
				yet. <%= link_to 'Click here to request your first Vocat course', new_course_request_path %>.
			<% end %>
		</div>
	</div>

<% end %>
