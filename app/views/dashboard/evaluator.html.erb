<% content_for :content do %>

	<div class="page-section">
		<div class="header-wrapper">
			<div class="buttons">
				<%= link_to 'Request New Course', new_course_request_path, :class => 'primary-button new-button' %>
			</div>
			<div class="header">
				<i class="header-icon courses"></i><h4>Your Courses</h4>
				<p class="subtitle">Your courses and activity at a glance.</p>
			</div>
		</div>
		<%= render 'dashboard/shared/course_list' %>
		<% if current_user.courses_count > 0 %>
    		<%= link_to 'All Courses', courses_path, class: 'all-courses-link' %>
	  	<% end %>
	</div>

<% end %>
