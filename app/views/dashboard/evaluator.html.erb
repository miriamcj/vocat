<% content_for :content do %>

	<div class="page-section">
		<div class="header-wrapper">
			<div class="buttons">
				<%= link_to 'Request New Course', new_course_request_path, :class => 'primary-button new-button' %>
			</div>
			<div class="header">
				<i class="icon courses"></i><h4>Your Courses</h4>
				<p class="subtitle">Your courses and activity at a glance.
					<% if current_user.courses_count > 0 %>
						<%= link_to 'View All', courses_path, { class: 'all-courses-link', style: 'margin-left: 15px;' } %>
					<% end %>
				</p>
			</div>
		</div>
    <div class="body secondary">
      <% if current_user.courses.count == 0 %>
          It looks like you don't belong to any courses yet. <%= link_to 'Click here to request your first Vocat course', new_course_request_path %>.
      <% else %>
          <%= render 'dashboard/shared/course_list' %>
      <% end %>
    </div>
		<% if current_user.courses_count > 0 %>
			<%= link_to courses_path, { class: 'all-courses-link' } do %>
				<i class="link-icon courses"></i>All Courses
			<% end %>
		<% end %>
	</div>

<% end %>
