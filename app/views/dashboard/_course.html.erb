<h2 class="frame-summary--title"><%= link_to course, portfolio_course_path(course)  %></h2>

<% current_user.submissions.for_courses(course).each_with_index do |submission, index| %>

  <div class="portfolio-frame">
    <figure class="frame-attachment">
      <% if submission.has_video? %>
        <%= link_to image_tag(submission.thumb, :class => 'frame-attachment--image'), course_user_creator_project_detail_path(course, submission.creator, submission.project) %>
      <% else %>
        <div class="attachment-placeholder"></div>
      <% end %>
    </figure>

    <div class="frame-summary">
      <h2 class="frame-summary--project">
        <%= link_to submission.project_name, course_user_creator_project_detail_path(course, submission.creator, submission.project) %>
      </h2>

      <% if submission.project.evaluatable() %>
        <%= render 'dashboard/scores', :submission => submission, :course => course %>
      <% end %>
      <a class="comment-indicator pull-left" data-behavior="routable" href="<%= url_for course_user_creator_project_detail_path(course, submission.creator, submission.project) %>"><%= pluralize(submission.discussion_posts_count, 'comment') %></a>
      <a class="frame-summary--link pull-right" data-behavior="routable" href="<%= url_for course_user_creator_project_detail_path(course, submission.creator, submission.project) %>">View Submission Detail</a>

    </div>
  </div>
<% end %>
