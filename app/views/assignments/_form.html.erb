<%= form_for([@organization, @course, @assignment]) do |f| %>
  <%= form_errors(@assignment) %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :course %><br />
    <%= f.text_field :course %>
  </div>
  <div class="field">
    <%= f.label :assignment_type %><br />
    <%= f.text_field :assignment_type %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
