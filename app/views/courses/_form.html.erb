<%= form_for([@organization, @course]) do |f| %>
  <%= form_errors(@course) %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :department %><br />
    <%= f.text_field :department %>
  </div>
  <div class="field">
    <%= f.label :number %><br />
    <%= f.text_field :number %>
  </div>
  <div class="field">
    <%= f.label :section %><br />
    <%= f.text_field :section %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <% if current_user.role? :admin %>
    <div class="field">
      <label>Instructors</label>
      <%= collection_select(:instructors, :id, User.instructors.where(:organization_id => @organization.id).order("name ASC"), :id, :name, {}, :class => "chzn-select", :multiple => "multiple") %>
    </div>
  <% end %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
