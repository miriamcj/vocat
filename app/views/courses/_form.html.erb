<%= simple_form_for([@organization, @course]) do |f| %>
  <%= form_errors(@course) %>

  <%= f.input :name %>
  <%= f.input :department %>
  <%= f.input :number %>
  <%= f.input :section %>
  <%= f.input :description %>

  <% if current_user.role? :instructor %>
    <%= f.association :students,
                      :collection => User.where("organization_id = #{@organization.id} AND role != 'admin'"),
                      :input_html => {:name => "students[]", :class => "chzn-select input-block-level",
                                      :data => {:placeholder => "Choose students..."}}  %>
  <% end %>

  <% if current_user.role? :instructor %>
    <%= f.association :helpers,
                      :collection => User.where("organization_id = #{@organization.id} AND role != 'admin'"),
                      :input_html => {:name => "helpers[]", :class => "chzn-select input-block-level",
                                      :data => {:placeholder => "Choose helpers..."}}  %>
  <% end %>

  <% if current_user.role? :admin %>
    <%= f.association :instructors,
                      :collection => User.where("organization_id = #{@organization.id} AND role = 'instructor'"),
                      :include_blank => false,
                      :input_html => {:name => "instructors[]", :class => "chzn-select input-block-level",
                                      :data => {:placeholder => "Choose instructors..."}}  %>
  <% end %>

  <%= f.button :submit %>
<% end %>
