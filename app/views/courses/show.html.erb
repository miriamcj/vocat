<% if can? :update, @course %>
  <div><%= link_to 'Edit', edit_organization_course_path(@organization, @course) %></div>
<% end %>

<% if can? :destroy, @course %>
  <div><%= link_to 'Destroy', organization_course_path(@organization, @course), method: :delete, data: { confirm: 'Are you sure?' } %></div>
<% end %>
<p class="lead">In this course you are: <%= @course.role(current_user) %>.</p>

<p>
  <b>Name:</b>
  <%= @course.name %>
</p>

<p>
  <b>Department:</b>
  <%= @course.department %>
</p>

<p>
  <b>Number:</b>
  <%= @course.number %>
</p>

<p>
  <b>Section:</b>
  <%= @course.section %>
</p>

<p>
  <b>Description:</b>
  <%= @course.description %>
</p>

<div>
  <b>Creators:</b>
  <ul>
    <% @course.creators.each do |creator| %>
      <li><%= creator.name %></li>
    <% end %>
  </ul>
</div>

<div>
  <b>Assistants:</b>
  <ul>
    <% @course.assistants.each do |assistant| %>
      <li><%= assistant.name %></li>
    <% end %>
  </ul>
</div>

<div>
  <b>Evaluators:</b>
  <ul>
    <% @course.evaluators.each do |evaluator| %>
      <li><%= evaluator.name %></li>
    <% end %>
  </ul>
</div>


