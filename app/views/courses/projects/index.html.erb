<div class="project-index">
  <div class="content-frame">
    <h1 class="heading-largest">Manage projects</h1>
  </div>
  <div class="content-frame">

    <table class="model-table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Rubric</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
      <% @projects.each do |project| %>
        <tr>
          <th>
            <%= link_to project.name, course_project_path(@course, project) %>
          </th>
          <td><%= project.description %></td>
          <td><%= project.rubric_name %></td>
          <td style="white-space: nowrap">
            <% if can? :update, project %>
             <%= link_to 'Edit', edit_course_project_path(@course, project) %>
            <% end %>
            <% if can? :delete, project %>
              <%= link_to 'Delete', course_project_path(@course, project), method: :delete, data: { confirm: 'Are you sure?' } %>
            <% end %>
          </td>
        </tr>
      </tbody>
      <% end %>
    </table>

    <br />

    <% if can? :create, @course.projects.build %>
    <ul class="model-table--actions">
        <li><%= link_to 'New Project', new_course_project_path(@course) %></li>
    </ul>
    <% end %>

  </div>

</div>


