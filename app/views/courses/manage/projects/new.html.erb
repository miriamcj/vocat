<% content_for :content_header do %>
  New Project
<% end %>

<% content_for :content_header_links do %>
<% end %>

<% content_for :content_intro do %>
  <p>
    Enter the unique name, brief description, and due date for this project and select a rubric in the drop-down menu
    below. If you wish to evaluate the project with narrative comments only, select “No rubric.” Please be sure to
    indicate whether this is a group or individual project.
  </p>
<% end %>

<% content_for :content_frames	 do %>
  <%= form_for(@project, :url => course_manage_projects_path(@course)) do |f| %>

    <%= render 'form', :f => f %>

    <div class="input-group">
      <%= link_to 'Back', course_manage_projects_path(@course), :class => 'gray-ex-button' %>
      <%= f.submit 'Save project', :class => 'teal-arrow-button' %>
    </div>

  <% end %>
<% end %>
