<div class="rubric-index">
  <header class="bar-header">
    <h2 class="bar-header--title">Rubrics</h2>
    <%= link_to 'New Rubric', new_course_manage_rubric_path(@course), :class => 'teal-plus-button' %>
  </header>
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
    <% @my_rubrics.each do |rubric| %>
      <tr>
        <th>
          <%= link_to rubric.name, course_manage_rubric_path(@course, rubric), :class => 'table--heading' %>
        </th>
        <td><%= rubric.description %></td>
        <td>
          <strong>
            <%= link_to 'Show', course_manage_rubric_path(@course, rubric) %>
            <% if can? :update, rubric %>
              &nbsp;/&nbsp;<%= link_to 'Edit', edit_course_manage_rubric_path(@course, rubric) %>
            <% end %>
            <% if can? :destroy, rubric %>
              &nbsp;/&nbsp;<%= link_to 'Destroy', course_manage_rubric_path(@course, rubric), method: :delete, data: { confirm: 'Are you sure?' } %>
            <% end %>
          </strong>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>


