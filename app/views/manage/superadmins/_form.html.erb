<fieldset>
	<div class="formgrid whole">
		<%= f.label :email %>
		<%= f.text_field :email %>
	</div>

	<% if local_assigns.fetch :show_password, nil %>
		<div class="formgrid half">
			<%= f.label :password %>
			<%= f.password_field :password %>
		</div>
		<div class="formgrid half">
			<%= f.label :password_confirmation %>
			<%= f.password_field :password_confirmation %>
		</div>
	<% end %>

	<div class="formgrid third">
		<%= f.label :first_name %>
		<%= f.text_field :first_name %>
	</div>
	<div class="formgrid third">
		<%= f.label :middle_name %>
		<%= f.text_field :middle_name %>
	</div>
	<div class="formgrid third">
		<%= f.label :last_name %>
		<%= f.text_field :last_name %>
	</div>
	<div class="formgrid third">
		<%= f.label :gender %>
		<%= f.text_field :gender %>
	</div>

	<div class="formgrid third">
		<%= f.label :city %>
		<%= f.text_field :city %>
	</div>
	<div class="formgrid third">
		<%= f.label :state %>
		<%= f.text_field :state %>
	</div>
	<div class="formgrid third">
		<%= f.label :country %>
		<%= f.text_field :country %>
	</div>

	<%= f.hidden_field :role, :value => :superadministrator %>
</fieldset>
