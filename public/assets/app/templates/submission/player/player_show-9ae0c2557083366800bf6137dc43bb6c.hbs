<div class="header-wrapper">
  <div class="buttons">
    {{#if abilities.can_attach}}
      <a href="#" data-behavior="destroy" class="gentle-warning-button delete-button">Delete Video</a>
    {{/if}}
  </div>
  <div class="header">
    <h2>Video</h2>
  </div>
</div>
<div class="body body-full-bleed">
  <div class="player-container">
    <video id="video-player" data-behavior="video-player" class="video-js vjs-default-skin" controls preload="auto" >
      {{#if is_youtube}}
      <source src="{{locations.url}}" type="{{source_details.mime}}" />
      {{/if}}

      {{#if is_vimeo}}
      <source src="{{locations.url}}" type="{{source_details.mime}}" />
      {{/if}}

      {{#if is_attachment}}
      <source src="{{locations.mp4}}" type="video/mp4" />
      <source src="{{locations.webm}}" type="video/webm" />
      {{/if}}

      <track kind="captions" src="/api/v1/videos/{{id}}.vtt" srclang="en" label="English" default>
    </video>
  </div>
</div>
